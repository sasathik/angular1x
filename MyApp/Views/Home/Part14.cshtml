
@{
    Layout = null;
    ViewBag.Title = "Calendar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Part14</title>
</head>
<body>
    <h2>Schedular App</h2>
    <div ng-app="MyApp" ng-controller="Part14"> 
        <div class="row">
            <div class="col-md-8">
                <div id="calendar" ui-calendar="UIConfig.calendar" ng-model="EventSources" calendar="myCalendar"></div>
            </div>
            <div class="col-md-4">
                <div ng-show="SelectedEvent" class="alert alert-success" style="margin-top:50px;">
                    <h2 style="margin-top:0px;">Selected Event:</h2>
                    <h3 style="color:#A9A50E;">{{SelectedEvent.description}}</h3>
                </div>
            </div>
        </div>
    </div>

    @* CSS *@
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/fullcalander/fullcalander.css" rel="stylesheet" />
    @* JS *@
    <script src="~/Scripts/fullcalander/moment.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/fullcalander/calander.js"></script>
    <script src="~/Scripts/fullcalander/fullcalandar.js"></script>
    <script src="~/Scripts/fullcalander/gcal.js"></script>
    <script src="~/Scripts/MyApp/Part14.js"></script>
</body>
</html>
